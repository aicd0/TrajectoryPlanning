<?xml version="1.0"?>
<robot name="obstacles" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Import shared components -->
  <xacro:include filename="$(find robot_sim)/urdf/shared.xacro" />

  <!-- Base link -->
  <link name="world"/>

  <joint name="obj1_joint" type="fixed">
    <parent link="world"/>
    <child link="obj1"/>
  </joint>

  <link name="obj1">
    <collision>
      <origin xyz="0.5 0 2" rpy="0 0 0"/>
      <geometry>
	      <box size="0.5 0.5 0.5"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="0.5 0 2" rpy="0 0 0"/>
      <geometry>
	      <box size="0.5 0.5 0.5"/>
      </geometry>
      <material name="blue"/>
    </visual>

    <inertial>
      <origin xyz="0.5 0 2" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia
        ixx="1.0" ixy="0.0" ixz="0.0"
        iyy="1.0" iyz="0.0"
        izz="1.0"/>
    </inertial>
  </link>

  <gazebo reference="obj1">
    <material>Gazebo/Blue</material>
  </gazebo>

</robot>
